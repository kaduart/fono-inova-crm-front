{
  "compilerOptions": {
    "composite": true,
    "module": "CommonJS",  // Alterado para CommonJS para compatibilidade com Node
    "moduleResolution": "node",  // Modificado de "bundler" para "node"
    "target": "ES2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "**/*.d.ts"
  ]
}